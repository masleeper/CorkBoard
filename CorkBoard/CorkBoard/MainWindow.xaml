<Window x:Class="CorkBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorkBoard"
        mc:Ignorable="d"
        Title="Image Debug Window" 
        Height="768"
        Width="1366">
    <Grid Background="#FF212121">
        <Grid Background="#000000">
            <TextBlock x:Name="TimeBlock" Foreground="White" FontSize="100" Margin="27,-12,839,628.4">10:34 PM</TextBlock>
            <TextBlock x:Name="DayBlock" Foreground="White" FontSize="50" Margin="566,0,515,671.4">Wednesday</TextBlock>
            <TextBlock x:Name="DateBlock" Foreground="White" FontSize="30" Margin="566,71,515,616.4">September 19, 2019</TextBlock>
            <TextBlock x:Name="TempBlock" Foreground="White" FontSize="80" Margin="955,10,222,629.4" >80</TextBlock>
            <StackPanel x:Name="MainView" Background="#FF212121" Margin="0,127,187,0.4">
                <Image x:Name="ImageBox" Height="150" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
